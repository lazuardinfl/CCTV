{
    "name": "CCTV",
    "build": {
        "dockerfile": "Dockerfile",
        "target": "dev"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.quickSuggestions": {
                    "other": "on",
                    "comments": "off",
                    "strings": "on"
                },
                "editor.occurrencesHighlight": "off",
                "editor.guides.bracketPairs": true,
                "editor.guides.bracketPairsHorizontal": false,
                "editor.bracketPairColorization.enabled": true,
                "explorer.sortOrder": "type",
                "terminal.integrated.cursorStyle": "line",
                "dotnet.defaultSolution": "disable",
                "dotnet.server.useOmnisharp": false,
                "dotnet.codeLens.enableReferencesCodeLens": false
            },
            "extensions": [
                "ms-azuretools.vscode-docker",
                "svelte.svelte-vscode",
                "humao.rest-client"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        }
    },
    "runArgs": ["--env-file", ".env"],
    "initializeCommand": ["./init.sh"],
    "postCreateCommand": "sudo chown vscode:vscode ~/.nuget && dotnet dev-certs https && dotnet restore",
    "mounts": [
        "type=bind,source=${localEnv:HOME}/.devcache/.nuget/packages,target=/home/vscode/.nuget/packages",
        "type=bind,source=${localEnv:HOME}/.devcache/.npm,target=/home/vscode/.npm"
    ]
}
